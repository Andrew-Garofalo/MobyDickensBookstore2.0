@{
    ViewBag.Title = "Contact Us";
}
<h2>@ViewBag.Title.</h2>

<div id="formSection">
    @using (Ajax.BeginForm(new AjaxOptions
    {
        HttpMethod = "post",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "formSection"
    }))
    {
        <label style="display:block;" for="message">@ViewBag.Message</label>
        <textarea rows="4" cols="50" id="message" name="message"></textarea><br />
        <input class="btn btn-primary" style="margin-bottom:2%;" type="submit" value="Send" />
    }
</div>

@section scripts {
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}

